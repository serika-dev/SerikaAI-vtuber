# AI Sings and Speaks - Configuration File
# Copy this file to .env and fill in your own values

# OpenAI API Settings (or compatible LLM API)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o

# Fish Audio TTS Settings
FISHAUDIO_KEY=your_fishaudio_key_here
VOICE_ID=your_voice_id_here
FISH_AUDIO_MODEL=speech-1.6

# Song Conversion Settings
VOICE_MODEL_ID=Kuromi Serika
SONG_API_URL=http://localhost:62362
MAX_SONG_DOWNLOAD_TIME=180000
SONG_PROGRESS_CHECK_INTERVAL=2000

# MongoDB Settings
MONGODB_URI=mongodb://localhost:27017/ai-voice-chat

# Twitch Integration (optional)
TWITCH_OAUTH_TOKEN=oauth:your_twitch_oauth_token_here

# Port Configuration (optional)
PORT=3000 